--重写返回键
参数=0
function onKeyDown(key,event)
  if(key==4)then
    if(web.canGoBack())then
      web.goBack()
    else
      if 参数+2 > tonumber(os.time()) then 
        退出程序()
      else
        hua.showPage(0)--切换到首页
        MD提示("请再按一次返回","#FF41CBF7","#ffffffff","0","20")
        参数=tonumber(os.time()) 
      end
    end
    return true
  end
end



