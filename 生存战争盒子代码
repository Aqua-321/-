--程序启动时会执行的事件

--退出程序
function 退出程序()
  if this.packageName == "com.androlua" or this.packageName == "com.xnm.FusionApp" then
    activity.finish()
  else
    System.exit(0)
  end
end
--新建一个退出程序函数，勿删！
--不然用“退出程序()”会报错，这两句话可以删了

--首次启动侧滑。

--首次启动弹出窗口的代码
function getData(name,key)
  local data=this.getApplicationContext().getSharedPreferences(name,0).getString(key,nil)
  return data
end

function putData(name,key,value)
  this.getApplicationContext().getSharedPreferences(name,0).edit().putString(key,value).apply()
  return true
end

--首次安装程序启动仅显示一次的布局
if not getData("ghost","99") then--99这两个号码要一致，才会只显示一次，当然也可以改成你的
  putData("ghost","99","显示一次")--99这两个号码要一致，才会只显示一次，当然也可以改成你的
  activity.newActivity('ghost.lua')--图片以及布局代码，都在工程文件里面
end




--更新

require "import"
import "ppp"



--检测网络
sjy = 1000
function junyang()
task(1,function()
if (sjy > 1) then
sjy=sjy-1
local wl=activity.getApplicationContext().getSystemService(Context.CONNECTIVITY_SERVICE).getActiveNetworkInfo(); 
if wl== nil then
退出页面()
end
else
end
junyang()
end)
end
junyang()


--自动切换主题颜色

--程序启动时会执行的事件
import "theme"
--初始化主题
setThemeOnUI(false)
--储存夜间模式状态留作判断用
isNight=getSelectedTheme().night
--当从设置主题页面回到主页面时会执行
function onResume()
  --处理夜间模式变化，重新设置主题
  local now=getSelectedTheme().night
  if not (now==isNight) then
    setThemeOnUI(true)
    isNight=now
  else
    setThemeOnUI(false)
  end
  --夜间模式适配举例，实际使用时需要在「收到新标题」事件添加相关代码
  if getNightMode() == true then
    加载Js([[
    var css = document.createElement('link');
    css.id = 'nightmode';
    css.rel = 'stylesheet';
    css.href = 'data:text/css,*{color:white}';
    document.body.appendChild(css);
    ]])
  else
    加载Js([[document.body.removeChild(document.getElementById("nightmode"))]])
  end
end

