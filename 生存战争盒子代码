--设置字体颜色
appp=activity.getWidth()
local kuan=appp/10
hua.setOnPageChangeListener(PageView.OnPageChangeListener{
  onPageScrolled=function(a,b,c)
    if c==0 then
      if a==0 then--首页
        文本颜色(a1,0xFF000000)--选中字体颜色
        文本颜色(a2,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a3,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a4,0xFF6A6A6A)--未选中字体颜色
      elseif a==1 then--浏览
        文本颜色(a1,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a2,0xFF000000)--选中字体颜色
        文本颜色(a3,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a4,0xFF6A6A6A)--未选中字体颜色
      elseif a==2 then--阅读
        文本颜色(a1,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a2,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a3,0xFF000000)--选中字体颜色
        文本颜色(a4,0xFF6A6A6A)--未选中字体颜色
      elseif a==3 then--翻译
        文本颜色(a1,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a2,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a3,0xFF6A6A6A)--未选中字体颜色
        文本颜色(a4,0xFF000000)--选中字体颜色
      end--选中字体颜色与未选中字体颜色建议一致比较统一
    end
  end
})

